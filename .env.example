# AI Multi-Agent Note Taking System Configuration
# Copy this file to .env and modify as needed

# Model Configuration
DEFAULT_MODEL_NAME=Qwen/Qwen3-1.7B
MODEL_MAX_TOKENS=8196
MODEL_TEMPERATURE=0.7
MODEL_TOP_P=0.8

# System Paths
DOCUMENTS_FOLDER=documents
RECORDS_FOLDER=records
MODELS_CACHE_DIR=./models

# Agent Configuration
CHUNKED_SYNTHESIS_THRESHOLD=10
BATCH_SIZE=5
MAX_SEARCH_RESULTS=5

# Search and Retrieval
EMBEDDING_MODEL=all-MiniLM-L6-v2
FAISS_INDEX_TYPE=FlatIP  # or FlatL2, HNSW

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
ENABLE_FULL_LOGGING=true
TRUNCATE_CONTENT=false

# Recording Configuration
RECORDING_ENABLED=true
AUTO_SAVE_JSON=true
SESSION_NAME_FORMAT=session_%Y%m%d_%H%M%S

# Hardware Configuration
TORCH_DEVICE=auto  # auto, cpu, cuda, mps
USE_TORCH_COMPILE=false

# Development Settings
DEBUG_MODE=false
VERBOSE_ERRORS=true
PROFILE_PERFORMANCE=false
